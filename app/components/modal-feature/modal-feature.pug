mixin modal-feature()
  +modal()(tabindex="-1" aria-labelledby="modalFeatureLabel" aria-hidden="true")
    .modal-dialog.modal-dialog-scrollable.modal-dialog-centered
      .modal-content
        .modal-header
          h4.modal-title Leģitīmo kopīgo lēmumu pieņemšanai tiešsaistē
          button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
        .modal-body
          p Balss vākšana “par” vai “pret” ar mobilo aplikāciju izmantojot drošu elektronisko parakstu
          p Smart-ID QES (pieejams) <br> eParaksts (izstrādē)
    block
